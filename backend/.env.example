# PrepSmart Environment Configuration
# Copy this file to .env and fill in your values

# Claude API Configuration
CLAUDE_API_KEY=sk-ant-your-api-key-here

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_SECRET_KEY=generate-a-secret-key-here

# Database
DATABASE_URL=sqlite:///prepsmart.db

# Agent Configuration
AGENT_TIMEOUT=30
MAX_CONCURRENT_TASKS=10

# Logging
LOG_LEVEL=INFO

# Optional: For production deployment
# ALLOWED_ORIGINS=https://prepsmart.azurewebsites.net
